<div class="container">
  <% no = 1 %>  
  <h3 style="margin-top:70px;"><%= Card.count%> New Requests for March-June 2019 </h3>
  <% Card.all.each do |c| %>  
  <% collapseid = "collpase"+no.to_s 
     collapse = "#collpase"+no.to_s 
     comment = "#comment"+no.to_s
     commentid = "comment"+no.to_s

     no = no+1 
  %>

  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="<%= collapse %>"><%= c.title %>(short name<%=c.short_name%>)</a>
        </h4>
       </div>
      <div id="<%= collapseid %>" class="panel-collapse collapse in">
        <div class="panel-body"><%=c.short_description %></div>
        <%# comments %>
         <div class="panel panel-info class">
         <div class="panel-heading">
          <h4 class="panel-title">
          <a data-toggle="collapse" href="<%= comment %>">Comments (total number of comments)</a>
          </h4>
         </div>
         <div id="<%= commentid %>" class="panel-collapse collapse">
         <div class="panel-body">Comment 1: <%=c.short_description %></div>
         </div>
         </div>
      <div class="panel-footer">Request Type: <%= c.request_type %> | Requester: <%= c.requester_name %> 
      </div>
      </div>
    </div>
  </div>
    
 <% end %>
   

</div>    